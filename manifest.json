{
  "manifest_version": 3,
  "name": "Textify - Voice to Text everywhere",
  "version": "1.1.1",
  "description": "Say what you want typed and Textify will type it onto the page for you",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["https://kendylwhisper.replit.app/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "commands": {
    "toggle-microphone": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Toggle the microphone"
    }
  }
}